<h1>Beers</h1>
<hr>

<table>
  <thead>
    <tr>
      <th>Brewery</th>
      <th>Name</th>
      <th>ABV</th>
      <th>Stock</th>
      <th>Style</th>
      <th>Dispense</th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.brewery.name, edit_beer_path(beer) %></td>
        <td><%= beer.name %></td>
        <td><%= number_to_percentage(beer.abv, precision: 1)%></td>
        <td><%= beer.stock %></td>
		<% if beer.style %>
        	<td><%= beer.style.name %></td>
		<% end %>
        <td><%= beer.dispense.name %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

